<div class="page-header">
  <h2>Edit Product</h2>
</div>

<div class="form-container">
  <form method="POST" action="/edit/<%= product.id %>" enctype="multipart/form-data" class="product-form">
    <div class="form-group">
      <label for="name">Product Name <span class="required">*</span></label>
      <input 
        type="text" 
        id="name" 
        name="name" 
        required 
        value="<%= product.name %>"
        placeholder="Enter product name"
      />
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="price">Price (USD) <span class="required">*</span></label>
        <input 
          type="number" 
          id="price" 
          name="price" 
          required 
          step="0.01" 
          min="0" 
          value="<%= parseFloat(product.price).toFixed(2) %>"
          placeholder="0.00"
        />
      </div>

      <div class="form-group">
        <label for="quantity">Stock Quantity <span class="required">*</span></label>
        <input 
          type="number" 
          id="quantity" 
          name="quantity" 
          required 
          min="0" 
          value="<%= product.quantity %>"
          placeholder="0"
        />
      </div>
    </div>

    <div class="form-group">
      <label for="image">Product Image</label>
      <% if (product.url_image) { %>
        <div class="current-image">
          <p>Current Image:</p>
          <img src="<%= product.url_image %>" alt="<%= product.name %>" />
        </div>
      <% } %>
      <input 
        type="file" 
        id="image" 
        name="image" 
        accept="image/*"
      />
      <small>Upload a new image to replace the current one (Supported formats: JPEG, PNG, GIF, WebP, Max 5MB)</small>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Update Product</button>
      <a href="/" class="btn btn-secondary">Cancel</a>
    </div>
  </form>
</div>
